doctype html
html
    head    
        script(async src="https://www.googletagmanager.com/gtag/js?id=UA-152635628-1")
        script(src='/js/analytics.js')
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width initial-scale=1, maximum-scale=1,user-scalable=0')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')
        title Cene Telefona | Cene #{title} telefona u Srbiji
        link(href='https://fonts.googleapis.com/css?family=Montserrat:300,400&display=swap' rel='stylesheet')
        link(href='/css/main.css' rel='stylesheet')
        link(rel="icon" href="/images/faviicon.png")
    body
        // Homepage
        .container
            .leftSide
            .content__container
                - if(user)
                    .adminHeader
                        .adminLogoutStyle
                            a.adminLabelStyle(href='/admin/panel') Admin Panel
                        .alignRight.adminLogoutStyle
                            a.logoutLabelStyle.logout(href='#') Logout
                form.content__searchForm(action='/search' method='GET')
                    input.content__searchForm-searchBar(type='text' name='search' placeholder='Unesite željeni telefon...')
                    button.content__searchForm-searchBtn
                        img.searchIcon(src='/images/search-icon.svg' alt='Pretrazi cene telefona u Srbiji')
                .mainMenu   
                    a.menuBtn.openMenu(href='#' id='Meni') Meni
                    a.mobileMenu.openMenu(href='#')
                        span
                        span
                        span
                .category__navigation
                    a.categoryGoToPocetna(href='/') Početna >
                    h2= title
            .rightSide       
        // Main menu
        include _mainMenu
        script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenMax.min.js')
        script(src='/js/animations.js')
        script(src='/js/bundle.js')
                            